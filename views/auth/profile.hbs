
<section class="favlist-view">

  
  {{#each user.favlist}}
    <div>
      <input type="hidden" name="id" value="{{id}}">
      <h2>{{title}}</h2>
      {{#if img}}

      <a href="/movie/{{id}}"><img src=http://image.tmdb.org/t/p/w300/{{img}} alt="poster"></a>
      <input type="hidden" value="{{id}}" class="movie-id">

      <button class="btn-delete">Remove film</button>

      {{/if}}
    </div>
  {{/each}}
  

</section>